{
  "compilerOptions": {
    "outDir": "build",
    "target": "es2020",
    "lib": [
      "ES2020"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUnusedLocals": true,
    "useUnknownInCatchVariables": true,
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "noUnusedParameters": false,
    "noImplicitAny": true,
    "pretty": true,
    "typeRoots": [
      "src/@types",
      "./node_modules/@types"
    ],
    "noEmit": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": false,
    "baseUrl": "src",
    "paths": {
      "graphql/*": [
        "./graphql/*"
      ],
      "routes/*": [
        "./routes/*"
      ],
      "controllers/*": [
        "./controllers/*"
      ],
      "middlewares/*": [
        "./middlewares/*"
      ],
      "constants/*": [
        "./constants/*"
      ],
      "utils/*": [
        "./utils/*"
      ]
    },
  },
  "include": [
    "src"
  ]
}